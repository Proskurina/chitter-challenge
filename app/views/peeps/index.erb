<form action='/peeps/new'>
  <input type='submit' value='New peep'>
</form>

<h1> Peeps </h1>

<ul id="peeps">
  <% @peeps.each do |peep| %>
    <%=peep.created_at.strftime("%a, %d %b %Y %H:%M")%> <%=peep.user.name%> (aka <%=peep.user.user_name%>) posted:
    <li>
      <%=peep.text %>
    </li>
  <% end %>
</ul>

